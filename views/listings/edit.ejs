<% layout('layouts/boilerplate.ejs') %>
<body>
    <div class="row justify-content-center">
        <div class="col-10 col-md-8">
    <!-- <h1>Create a new Listing</h1> -->
    <form method="post" action="/listings/<%=List.id%>?_method=PUT" class="needs-validation" enctype="multipart/form-data" novalidate>
    <div class="row ofset-3">
        <div class="mb-3 col-12">
            <label for="title" class="form-label"><h4>Title</h4><p class="extra-info">Title for your place. should be short and catchy as in advertisement</p></label>
            <input type="text" name="listing[title]"  class="form-control"  placeholder="Enter the Name" id="title" value="<%=List.title%>" required> 
            <div class="valid-feedback">
                Title looks good
            </div>
            <div class="invalid-feedback">
                Please enter a title.
            </div>
        </div>
        <div class="mb-3 col-8">
            <label for="location"><h4>Address</h4><p class="extra-info">Jaipur,Rajesthan</p></label>
            <input type="text" name="listing[location]" class="form-control"   placeholder="Enter the Location" value="<%=List.location%>" id="location" required> 
            <div class="invalid-feedback">
                Enter your Address.
            </div>
        </div>
        <div class="mb-3 col-4">
            <label for="country"><h4>Country</h4><p class="extra-info">Country</p></label>
            <input type="text" name="listing[country]" class="form-control"  placeholder="Enter the Country" value="<%=List.country%>" id="country" required>
            <div class="invalid-feedback">
                Select Your Country.
            </div>
        </div>
        <div class="mb-3 col-12">
            <div> 
                <img class="show-image mb-3" src="<%=originalImg%>" style="width: 60%;" alt="">
            </div>
        </div>
        <div class="mb-3 col-12">
            <label for="inpImage"><h4>Upload Image</h4></label>
            <input type="file" class="form-control" name="listing[image]" id="inpImage">
        </div> 
        <div class="mb-3 col-12">
            <label for="description"><h4>Description</h4> <p class="extra-info">Description of the place</p></label>
            <textarea name="listing[description]" id="description" class="form-control" rows="4" placeholder="Enter the Description" required><%=List.description%></textarea>
            <div class="valid-feedback">
                Description looks good
            </div>
            <div class="invalid-feedback">
                Please enter a Description.
            </div>
        </div>
        <!-- Category Options -->
        <div class="mb-3 col-12">
            <div class="mutliSelect">
              <ul
                class="row row-cols-5 justify-content-center gap-4 text-center"
              >
                <li class="col">
                  <label for="1">
                    <i class="fa-solid fa-bed"></i>
                    Rooms
                  </label>
                  <input
                    type="checkbox"
                    value="Rooms"
                    name="listing[category][]"
                    id="1"
                  />
                </li>
                <li class="col">
                  <label for="2"> 
                    <i class="fa-solid fa-water"></i>
                    Lake
                    </label>
                  <input
                    type="checkbox"
                    value="Lake"
                    name="listing[category][]"
                    id="2"
                  />
                </li>
                <li class="col">
                  <label for="3">
                    <i class="fa-solid fa-umbrella-beach"></i>Beach</label
                  >
                  <input
                    type="checkbox"
                    value="Beach"
                    name="listing[category][]"
                    id="3"
                  />
                </li>
                <li class="col ">
                  <label for="4">
                    <i class="fa-solid fa-mountain-city"></i>Mountains</label
                  >
                  <input
                    type="checkbox"
                    value="Mountains"
                    name="listing[category][]"
                    id="4"
                  />
                </li>
                <li class="col ">
                  <label for="5">
                    <i class="fa-solid fa-person-swimming"></i>Pool</label
                  >
                  <input
                    type="checkbox"
                    value="Pool"
                    name="listing[category][]"
                    id="5"
                  />
                </li>
                <li class="col">
                  <label for="6"> <i class="fa-solid fa-city"></i>City</label>
                  <input
                    type="checkbox"
                    value="City"
                    name="listing[category][]"
                    id="6"
                  />
                </li>
                <li class="col">
                  <label for="7">
                    <i class="fa-solid fa-campground"></i>Camping</label
                  >
                  <input
                    type="checkbox"
                    value="Camping"
                    name="listing[category][]"
                    id="7"
                  />
                </li>
              </ul>
            </div>
          </div>
        <div class="mb-3 col-12">
            <label for="price"><h4>Price</h4><p class="extra-info">Price per night of this place</p></label>
            <input type="text" name="listing[price]"  class="form-control"  value="<%=List.price%>" placeholder="Pricing/night" id="price" required>
            <div class="invalid-feedback">
                Enter a valid Price
            </div> 
        </div>
        <button type="submit" class="btn-main mb-5">Save</button>
    </div>
    </form>
</div>
</div>
</body>